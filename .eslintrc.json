
{
	"extends": [
		"eslint:recommended", 
		"plugin:@typescript-eslint/recommended"
	],
	"plugins": ["prettier", "@typescript-eslint"],
	"rules": {
		"prettier/prettier": "error",
		"no-tabs":"off",
		"indent": ["error", "tab"]
	},
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"root": true,
	"env": {
		"node": true,
		"es6": true
	},
	"ignorePatterns": ["node_modules", "build", "dist", "public"]
}